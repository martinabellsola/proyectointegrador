<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logoHooves/logoSvg.svg" />
	
	<title> Hooves </title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- UIkit CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.4.2/dist/css/uikit.min.css" />
    <!-- UIkit JS -->
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.4.2/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.4.2/dist/js/uikit-icons.min.js"></script>
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<!-- Include Head -->


<body>
	
	<!-- Header -->
	<%- include("partials/header.ejs")%>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner" uk-slideshow="autoplay: true; autoplay-interval: 2000; min-height: 200; max-height: 300;">
		<div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1">
	
			<ul class="uk-slideshow-items">
				<li>
					<img src="/images/bannersIndex/nike2.jpg" alt="" uk-cover>
				</li>
				<li>
					<img src="/images/bannersIndex/convers.jpg" alt="" uk-cover>
				</li>
				<li>
					<img src="/images/bannersIndex/trending.jpg" alt="" uk-cover>
				</li>
				<li>
					<img src="/images/bannersIndex/vans.jpg" alt="" uk-cover>
				</li>
			</ul>
	
			<a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slideshow-item="previous"></a>
			<a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slideshow-item="next"></a>
	
		</div>
	
		<ul class="uk-slideshow-nav uk-dotnav uk-flex-center uk-margin"></ul>
	
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%for (let index = 0; index < products.length; index++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a class="productLink" href="/product/<%=products[index].id%>">						
						<figure class="product-box_image">
							<img class="productImg" src= "images/products/<%= products[index].imagen%>" alt="<%= products[index].nombre%>">
						</figure>
						<article class="product-box_data">
							<h2><%= products[index].nombre%></h2>
							<p> <%= products[index].descripcion%></p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<%}%>
		</div>
	</div>
	<!-- /Novedades -->

	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%for (let index = 0; index < products.length; index++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a class="productLink" href="/product/<%=products[index].id%>">						
							<figure class="product-box_image">
								<img class="productImg" src= "images/products/<%= products[index].imagen%>" alt="<%= products[index].nombre%>">
							</figure>
							<article class="product-box_data">
								<h2><%= products[index].nombre%></h2>
								<p> <%= products[index].descripcion%></p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<%}%>
		</div>
	</div>
	<!-- /Más comentados -->

	<!-- footer -->
	<%- include("partials/footer.ejs")%>
	<!-- /footer -->

</body>	
</html>

