<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logoSvg.svg" />
	
	<title> Hooves </title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

	<!-- Header -->
	<%- include("partials/headerLogueado.ejs")%>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="https://via.placeholder.com/150" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%=usuarios.usuario%>
						<a href="../profile/<%=usuarios.idUsuario%>/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%=usuarios.cantidadProductos%> productos</li>
						<li><%=usuarios.cantidadSeguidores%> seguidores</li>
						<li><%=usuarios.cantidadComentarios%> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Novedades</h2>
					</div>
					<!-- Show the "ultimos" products -->
					<%for (let index = 0; index < products.length; index++) { %>
					
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/<%=products[index].idProducto%>">						
								<figure class="product-box_image">
									<img src= "/images/<%=products[index].img%>" alt="<%= products[index].nombre%>">
								</figure>
								<article class="product-box_data">
									<h2><%= products[index].nombre%></h2>
									<p> <%= products[index].productDescription%></p>
									<p>Comentarios: 12</p>
								</article>
							</a>
						</section>
					</div>
					<%}%>
				</div>
			</div>
	<!-- /Mis productos -->

	<!-- footer -->
	<%- include("partials/footer.ejs")%>
	<!-- /footer -->

</body>	
</html>