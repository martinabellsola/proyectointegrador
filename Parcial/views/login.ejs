<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logoHooves/logoSvg.svg" />
	
	<title> Hooves </title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<!-- Include Head -->

<body>
	<!-- Header -->
	<%if(logueado == false){%>
		<%-include("partials/header.ejs")%>
		<%}else{%>
		<%-include("partials/headerLogueado.ejs")%>
		<%}%>
	<!-- /Header -->

	<!-- Ingresar -->
	<div class="container products-wrapper">
		
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
				<div class="login-box">
					<h2>¡Ingresa!</h2>
					<form method="POST" action="/login">
					  <div class="user-box">
						<input type="text" name="name" required="" id="">
						<label>Nombre de usuario:</label>
					  </div>
					  <div class="user-box">
						<input type="password" name="password" required="" id="">
						<label>Contraseña:</label>
					  </div>
					  <div class="user-box">
						<input type="checkbox" name="rememberMe" id="">
						<label>Remember me:</label>
					  </div>
					  <input type="submit" value="enviar">
					
					</form>
				</div>	
			
		
	</div>
	
	<!-- footer -->
	<%- include("partials/footer.ejs")%>
	<!-- /footer -->
	
</body>
</html>